/**index.wxss**/
.swiper-container{
  width: 100%;
  height: 350rpx;
  flex: 0 0 auto;
  opacity: 0.6;
}

.bg-img{
  position: absolute;
  top: 0;
  left: 0;
  height: 100%;
  width: 100%;
  z-index: -1;
}

#toolsbox{
  display: flex;
  height: 300rpx;
  width: 100%;
  flex-direction: row;
  margin-top: 25%;

}
.card{
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.card .icons{
  flex: 2;
}

.card .text-box{
  flex: 1;
  font-size: 36rpx;
  margin-top: 20rpx;
  font-style: normal;
  font-weight: bold;
  color: #90be6d;
}