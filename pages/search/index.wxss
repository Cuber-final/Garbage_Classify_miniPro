/* pages/search/index.wxss */

.scroll-view-container {
  display: flex;
  flex-direction: row;
  width: 100%;
  height: 100%;
}

.left-scroller {
  width: 300rpx;
  height: 100%;
  background-color: #f1f1f1;
}

.left-scroller-item {
  background-color: #f1f1f1;
  line-height: 60px;
  text-align: center;
  font-size: 16px;
}

.left-scroller-item.active {
  background-color: #ffffff;
  color:#90be6d ;
}

.left-scroller-item.active::before {
  content: ' ';
  display: block;
  width: 3px;
  height: 60px;
  background-color: #90be6d;
  left: 0;
  position: absolute;
}

.right-scroller{
  height: 100%;
  background-color: #f1f1f1;
}
.right-scroller .right-scroller-item{
  background-color: #ffffff;
  height: 80rpx;
  text-align: center;
  line-height: 80rpx;
  font-size: 12px;
  width: 100%;
}

.right-scroller .line{
  color: #577590;
  height: 6px;
}